<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Font styling-->
    <Style x:Key="Text-Primary" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="Text-TemperatureDisplay" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="22"/>
    </Style>
    <!--App window styling-->
    <Style x:Key="AppBackground" TargetType="Grid">
        <Setter Property="Background" Value="#373737"></Setter>
    </Style>
    <Style x:Key="EllipseBackground" TargetType="Ellipse">
        <Setter Property="Fill" Value="#373737"></Setter>
    </Style>    
    <Style x:Key="RectangleBackground" TargetType="Rectangle">
        <Setter Property="Fill" Value="#373737"></Setter>
    </Style>
</ResourceDictionary>