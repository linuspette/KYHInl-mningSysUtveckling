<Window x:Class="Client.Administration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Administration"
        xmlns:components="clr-namespace:Client.Administration.Components"
        xmlns:viewModels="clr-namespace:Client.Administration.MVVM.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="SmartApp" 
        Height="720" 
        Width="1080">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Border MouseDown="TitleBar_MouseDown" 
            MouseLeftButtonDown="TitleBar_LeftButtonMouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <ContentControl Grid.Row="0" Content="{Binding CurrentView}"/>
            <!--Main Menu-->
            <components:MainMenu Grid.Row="1"
                                 Margin="0 -140 0 0"/>
        </Grid>
    </Border>
</Window>
